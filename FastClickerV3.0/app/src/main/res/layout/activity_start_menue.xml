<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/accent_material_dark"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Start_menue"
    android:id="@+id/GridLayout"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        android:paddingRight="10dp">
        <ImageButton
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:id="@+id/imbttn1"
            android:clickable="true"
            android:src="@drawable/dummimg" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:id="@+id/imbttn2"
            android:clickable="true"
            android:src="@drawable/dummimg" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/score_TV" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Time:"
            android:id="@+id/textView6"
            android:singleLine="true"
            android:paddingLeft="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="5"
            android:id="@+id/time_TV"
            android:paddingBottom="1dp"
            android:paddingRight="1dp"
            android:paddingTop="1dp"
            android:padding="1dp"
            android:paddingLeft="1dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingRight="10dp">

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:id="@+id/imbttn3"
            android:clickable="true"
            android:src="@drawable/dummimg" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:id="@+id/imbttn4"
            android:clickable="true"
            android:src="@drawable/dummimg" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"></FrameLayout>


</LinearLayout>

